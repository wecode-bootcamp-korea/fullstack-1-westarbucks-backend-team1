// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model category {
  id            Int      @id @default(autoincrement())
  category_name String
  drinks        drinks[]
}

model drinks {
  id                  Int                @id @default(autoincrement())
  drinks_name         String
  drinks_english_name String?
  category_id         Int
  description         String             @db.VarChar(300)
  is_new              Boolean
  created_at          DateTime           @default(now())
  category            category           @relation(fields: [category_id], references: [id])
  drinks_images       drink_images[]
  drinks_allergies    drinks_allergies[]
  nutrition           nutrition?

  @@index([category_id], name: "category_id")
}

model drink_images {
  id        Int    @id @default(autoincrement())
  image_url String @db.VarChar(1500)
  drinks_id Int
  drinks    drinks @relation(fields: [drinks_id], references: [id])

  @@index([drinks_id], name: "drinks_id")
}

model allergies {
  id               Int                @id @default(autoincrement())
  allergy          String
  drinks_allergies drinks_allergies[]
}

model drinks_allergies {
  id         Int       @id @default(autoincrement())
  drink_id   Int
  allergy_id Int
  allergies  allergies @relation(fields: [allergy_id], references: [id])
  drinks     drinks    @relation(fields: [drink_id], references: [id])

  @@index([allergy_id], name: "allergy_id")
  @@index([drink_id], name: "drink_id")
}

model nutrition {
  id            Int    @id @default(autoincrement())
  kcal          String
  sodium        String
  saturated_fat String
  sugar         String
  protein       String
  caffeine      String
  drink_id      Int
  drinks        drinks @relation(fields: [drink_id], references: [id])

  @@index([drink_id], name: "drink_id")
}

model users {
  id             Int      @id @default(autoincrement())
  name           String
  email          String   @unique
  password       String
  users_favorite String?
  created_at     DateTime @default(now())
}
