// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model categories{
  id         Int      @id @default(autoincrement())
  name       String 
  created_at DateTime @default(now())
  drinks drinks[]
}

model drinks{
  id Int @id @default(autoincrement())
  korean_name String
  english_name String
  description String
  created_at DateTime @default(now())
  category_id Int
  drink_images drink_images[]
  drink_allergies drink_allergies[]
  nutritions nutritions?
  categories categories @relation(fields: [category_id], references: [id])

}

model allergies{
  id Int @id @default(autoincrement())
  name String
  created_at DateTime @default(now())
  drink_allergies drink_allergies[]
}

model drink_allergies{
  id Int @id @default(autoincrement())
  drink_id Int
  allergy_id Int
  created_at DateTime @default(now())
  drinks drinks @relation(fields: [drink_id], references: [id])
  allergies allergies @relation(fields: [allergy_id], references: [id])
}

model nutritions{
  id Int @id @default(autoincrement())
  one_serving_kcal Decimal?
  sodium_mg Decimal?
  saturated_fat_g Decimal?
  sugars_g Decimal?
  protein_g Decimal?
  caffeine_mg Decimal?
  created_at DateTime @default(now())
  drink_id Int
  drinks drinks @relation(fields: [drink_id], references: [id])
}

model drink_images{
  id Int @id @default(autoincrement())
  image_url String @db.VarChar(3000)
  drinks_id Int
  created_at DateTime @default(now())
  drinks drinks @relation(fields: [drinks_id], references: [id])

}

model users{
  id Int @id @default(autoincrement())
  email String @unique
  password String
  nickname String?
  created_at DateTime @default(now())
}

